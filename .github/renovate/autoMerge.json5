{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge sonarr",
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "digest"
      ],
      "matchPackagePatterns": [
        "ghcr.io/onedr0p/sonarr-develop"
      ]
    },
    {
      "description": "Auto merge GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
