{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Separate PRs for talos cluster",
      "matchFileNames": [
        "**/kubernetes/talos/**"
      ],
      "additionalBranchPrefix": "talos-"
    },
    {
      "description": "Separate PRs for truenas cluster",
      "matchFileNames": [
        "**/kubernetes/truenas/**"
      ],
      "additionalBranchPrefix": "truenas-"
    }
  ]
}
