{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "cert-manager group",
      "groupName": "cert-manager",
      "matchPackagePatterns": ["cert-manager"],
      "group": {"commitMessageTopic": "{{{groupName}}}"}
    },
    {
      "description": "immich image group",
      "groupName": "immich",
      "matchPackagePatterns": ["immich"],
      "matchDatasources": ["docker"],
      "group": {"commitMessageTopic": "{{{groupName}}}"}
    },
    {
      "description": "cnpg group",
      "groupName": "cloudnative-pg",
      "matchPackagePatterns": ["cloudnative-pg"],
      "group": {"commitMessageTopic": "{{{groupName}}}"},
      "separateMinorPatch": true,
      "versioning": "loose"
    },
    {
      "description": "metallb group",
      "groupName": "metallb",
      "matchPackagePatterns": ["metallb"],
      "group": {"commitMessageTopic": "{{{groupName}}}"}
    },
    {
      "description": "external-snapshotter group",
      "groupName": "external-snapshotter",
      "matchPackagePatterns": [
        "external-snapshotter",
        "snapshot-controller",
        "snapshot-validation-webhook"
      ],
      "group": {"commitMessageTopic": "{{{groupName}}}"},
      "separateMinorPatch": true
    }
  ]
}
