{
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "commitMessagePrefix": "feat(images)!: "
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "commitMessagePrefix": "feat(charts)!: "
    },
    {
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "semanticCommitType": "feat"
    },
    {
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitType": "ci"
    }
  ]
}