{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto merge pre-commits",
      matchDatasources: ["github-releases", "github-tags"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: [
        "sirosen/texthooks",
        "gruntwork-io/pre-commit",
        "zricethezav/gitleaks",
        "Lucas-C/pre-commit-hooks",
        "adrienverge/yamllint",
        "pre-commit/pre-commit-hooks",
      ],
      ignoreTests: true,
    },
    {
      description: "Auto merge terraform providers",
      matchDatasources: ["terraform-provider"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      ignoreTests: true,
    },
    {
      description: "Auto-merge trusted container digests",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch"],
      matchPackagePrefixes: ["ghcr.io/home-operations"],
      ignoreTests: false,
    },
    {
      description: "Auto-merge blog",
      matchDatasources: ["docker"],
      automerge: true,
      //automergeType: "branch",
      matchUpdateTypes: ["major", "minor", "patch", "digest"],
      matchPackageNames: ["ghcr.io/ishioni/yellingatclouds"],
      minimumReleaseAge: null,
      minimumReleaseAgeBehaviour: "timestamp-optional",
      internalChecksFilter: "none",
      ignoreTests: true,
      versioning: "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
    },
    {
      description: "Auto-merge high-frequency OCI Charts",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: ["/kube-prometheus-stack/", "/grafana/", "/reloader/", "/renovate-operator/"],
      ignoreTests: true,
    },
    {
      description: "Auto-merge high-frequency docker images",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch"],
      matchPackageNames: ["ghcr.io/starosdev/scrutiny"],
      minimumReleaseAge: null,
      minimumReleaseAgeBehaviour: "timestamp-optional",
      internalChecksFilter: "none",
      ignoreTests: true,
    }
    {
      description: "Auto-merge GitHub Actions",
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "branch",
      matchUpdateTypes: ["minor", "patch", "digest"],
      ignoreTests: true,
    },
  ],
}
