{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>ishioni/homelab-ops//.renovate/autoMerge.json5",
    "github>ishioni/homelab-ops//.renovate/changelogs.json5",
    "github>ishioni/homelab-ops//.renovate/customManagers.json5",
